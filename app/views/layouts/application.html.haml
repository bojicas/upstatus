!!!
%html
  %head
    %title UP Status
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    %p.notice
      = notice
    %p.alert
      = alert

    - if admin_signed_in?
      %div.admin_link_bar
        %ul
          %li
            = link_to 'Services', '/'
          %li
            ="Signed in as #{current_admin.email}. Not you?"
          %li
            = link_to 'Sign out', destroy_admin_session_path

    = yield
